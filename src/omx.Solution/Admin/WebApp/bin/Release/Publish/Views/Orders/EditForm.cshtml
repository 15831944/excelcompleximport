﻿@model WebApp.Models.Order
  <div class="form-row">
   @Html.HiddenFor(x=>x.Id)
         <!--订单号-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.OrderNo)</label>
			@Html.EditorFor(x => x.OrderNo, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.OrderNo) } })
      
         </div>

        <!--订单所属的客户-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.Customer)</label>
			@Html.EditorFor(x => x.Customer, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Customer) } })
      
         </div>

        <!--发货地址-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.ShippingAddress)</label>
			@Html.EditorFor(x => x.ShippingAddress, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.ShippingAddress) } })
      
         </div>

        <!--联系人-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="form-label ">@Html.DisplayNameFor(model => model.Contect)</label>
			@Html.EditorFor(x => x.Contect, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Contect) } })
      
         </div>

        <!--备注-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="form-label ">@Html.DisplayNameFor(model => model.Remark)</label>
			@Html.EditorFor(x => x.Remark, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Remark) } })
      
         </div>

       <!--订单日期默认当天-->
       <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.OrderDate)</label>
            <div class="input-group">
			  @Html.EditorFor(x => x.OrderDate, 
                         new { htmlAttributes = new { @class = "form-control datepicker hasDatepicker",
                               placeholder = Html.DisplayNameFor(x => x.OrderDate ) } })
               <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
			 </div>
         </div>

	    
</div>

