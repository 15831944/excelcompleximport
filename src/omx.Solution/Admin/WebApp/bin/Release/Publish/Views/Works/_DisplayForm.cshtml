﻿@model WebApp.Models.Work
  <div class="form-row">
   @Html.HiddenFor(x=>x.Id)
         <!--名称-->
        <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.Name)</label>
			@Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Name) } })
      
         </div>

        <!--状态-->
        <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.Status)</label>
			@Html.EditorFor(x => x.Status, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Status) } })
      
         </div>

        <!--指派给-->
        <div class="col-xs-12 col-md-6">
            <label class="form-label ">@Html.DisplayNameFor(model => model.Assignee)</label>
			@Html.EditorFor(x => x.Assignee, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Assignee) } })
      
         </div>

       <!--开始日期-->
       <div class="col-xs-12 col-md-6">
            <label class="form-label ">@Html.DisplayNameFor(model => model.StartDate)</label>
            <div class="input-group">
			  @Html.EditorFor(x => x.StartDate, 
                         new { htmlAttributes = new { @class = "form-control datepicker hasDatepicker",
                               placeholder = Html.DisplayNameFor(x => x.StartDate ) } })
               <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
			 </div>
         </div>

       <!--结束日期-->
       <div class="col-xs-12 col-md-6">
            <label class="form-label ">@Html.DisplayNameFor(model => model.EndDate)</label>
            <div class="input-group">
			  @Html.EditorFor(x => x.EndDate, 
                         new { htmlAttributes = new { @class = "form-control datepicker hasDatepicker",
                               placeholder = Html.DisplayNameFor(x => x.EndDate ) } })
               <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
			 </div>
         </div>

       <!--开工时间-->
       <div class="col-xs-12 col-md-6">
            <label class="form-label ">@Html.DisplayNameFor(model => model.ToDoDateTime)</label>
            <div class="input-group">
			  @Html.EditorFor(x => x.ToDoDateTime, 
                         new { htmlAttributes = new { @class = "form-control datepicker hasDatepicker",
                               placeholder = Html.DisplayNameFor(x => x.ToDoDateTime ) } })
               <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
			 </div>
         </div>

		
      <!--是否启用-->
      <div class="col-xs-12 col-md-6">
              <label class="form-label text-danger">@Html.DisplayNameFor(model => model.Enableed)</label>
              <div class="custom-control custom-checkbox">
                 <input id="@Html.IdFor(model => model.Enableed)"
                       name="@Html.NameFor(model => model.Enableed)"
                       value="true" @(Model.Enableed ? "checked=\"checked\"" : "")
                       class="custom-control-input"
                       tabindex="6"
                       type="checkbox" />
                <label class="custom-control-label" for="@Html.IdFor(model => model.Enableed)">@Html.DisplayNameFor(model => model.Enableed)</label>
            </div>
      </div>

      <!--是否完成-->
      <div class="col-xs-12 col-md-6">
               <label class="form-label ">@Html.DisplayNameFor(model => model.Completed)</label>
              <div class="custom-control custom-checkbox">
                <input id="@Html.IdFor(model => model.Completed)"
                       name="@Html.NameFor(model => model.Completed)"
                       value="true" @((Model.Completed != null && Model.Completed == true) ? "checked=\"checked\"" : "")
                       tabindex="6"
                       class="custom-control-input"
                       type="checkbox" />
                <label class="custom-control-label" for="@Html.IdFor(model => model.Completed)">@Html.DisplayNameFor(model => model.Completed)</label>
            </div>
       </div>

		<!--工时-->
        <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.Hour)</label>
            @Html.EditorFor(x => x.Hour, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.Hour) } })

        </div>

		<!--优先级-->
        <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.Priority)</label>
            @Html.EditorFor(x => x.Priority, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.Priority) } })

        </div>

		<!--分数-->
        <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.Score)</label>
            @Html.EditorFor(x => x.Score, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.Score) } })

        </div>

	    
</div>

