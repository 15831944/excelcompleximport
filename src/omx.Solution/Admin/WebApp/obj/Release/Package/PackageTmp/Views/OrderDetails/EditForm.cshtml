﻿@model WebApp.Models.OrderDetail
  <div class="form-row">
   @Html.HiddenFor(x=>x.Id)
      
       <!--商品-->
       <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.ProductId)</label>
   	        @Html.DropDownListFor(model => model.ProductId, ViewBag.ProductId as List<SelectListItem>, htmlAttributes: new { @class = "form-control" }) 
       </div>

		<!--需求数量-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.Qty)</label>
            @Html.EditorFor(x => x.Qty, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.Qty) } })

        </div>

		<!--单价-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.Price)</label>
            @Html.EditorFor(x => x.Price, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.Price) } })

        </div>

		<!--金额(数量x单价)-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.Amount)</label>
            @Html.EditorFor(x => x.Amount, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.Amount) } })

        </div>

        <!--备注-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="form-label ">@Html.DisplayNameFor(model => model.Remark)</label>
			@Html.EditorFor(x => x.Remark, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Remark) } })
      
         </div>

     
       <!--订单号-->
       <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.OrderId)</label>
   	        @Html.DropDownListFor(model => model.OrderId, ViewBag.OrderId as List<SelectListItem>, htmlAttributes: new { @class = "form-control" }) 
       </div>

	    
</div>

