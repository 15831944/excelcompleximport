﻿@model WebApp.Models.Covid19
<!-- 弹出编辑窗体表单 -->
 <div id="covid19detailwindow" class="easyui-window" 
      title="明细数据" 
      data-options="modal:true,
                    closed:true,
                    minimizable:false,
                    collapsible:false,
                    maximized:false,
                    iconCls:'icon-more',
                    footer:'#windowfooter',
                    closeDuration:200,
                    closeAnimation:'slide',
                    openDuration:300,
                    openAnimation:'slide',
                    onBeforeClose:function(){
                      var that = $(this);
                      if(covid19hasmodified()){
                        $.messager.confirm('确认','你确定要放弃保存修改的记录?',function(r){
                        if (r){
                          var opts = that.panel('options');
                          var onBeforeClose = opts.onBeforeClose;
                          opts.onBeforeClose = function(){};
                          that.panel('close');
                          opts.onBeforeClose = onBeforeClose;
                          hook = false;
                        }
                        });
                        return false;
                      }
                    },
                    onOpen:function(){
                       $(this).window('vcenter');
                       $(this).window('hcenter');
                    },
                    onRestore:function(){
                    },
                    onMaximize:function(){
                    }
                    " style="width:800px;height:450px;display:none">
  <!-- toolbar -->
  <div class="panel-content py-2 rounded-bottom border-faded border-left-0 border-right-0  text-muted bg-subtlelight-fade sticky-top">
    <div class="row align-items-center m-0">
      <div class="col">
        <div class="btn-group btn-group-sm">
          <button name="saveitembutton" onclick="savecovid19item()" class="btn btn-default">
            <i class="fal fa-save"></i> @Html.L("Save")
          </button>
        </div>
        <div class="btn-group btn-group-sm" id="deleteitem-btn-group">
          <button onclick="deletecovid19item()" class="btn btn-danger">
            <i class="fal fa-times"></i> @Html.L("Delete")
          </button>
        </div>
      
      </div>
      <div class="col d-flex">

      </div>
    </div>
  </div>
 <!-- panel container form  -->
  <div class="panel-container show">
    <div class="panel-content">
           <form id="covid19_form" 
              class="easyui-form form-horizontal padding-10" 
              method="post" 
              data-options="novalidate:true,
                            onChange: function(target){
                              hook = true;
                              $('button[name*=\'saveitembutton\']').prop('disabled', false);
                             },
                             onLoadSuccess:function(data){
                               hook = false;
                               $('button[name*=\'saveitembutton\']').prop('disabled', true);
                             }">
  @Html.AntiForgeryToken()
   <!--Primary Key-->
  @Html.HiddenFor(model=>model.Id)
   <fieldset class="form-group">
   <div class="row m-1">

   <!--国家-->
        <label class="col-md-2 mb-1 form-label text-right text-danger">@Html.DisplayNameFor(model => model.country)</label>
		<div class="col-md-4 mb-1">  
			<input id="@Html.IdFor(model => model.country)" 
				   name="@Html.NameFor(model => model.country)" 
				   value="@Html.ValueFor(model => model.country)"
				   tabindex="0" required
				   class="easyui-textbox" 
                   style="width:100%"
				   type="text" 
				   data-options="prompt:'@Html.DisplayNameFor(model => model.country)',
								 required:true, 
                                 validType: 'length[0,100]'
                                 " />
       </div>
				   
   <!--日期-->
        <label class="col-md-2 mb-1 form-label text-right text-danger">@Html.DisplayNameFor(model => model.date)</label>
		<div class="col-md-4 mb-1">  
                <input id="@Html.IdFor(model => model.date)" 
			       name="@Html.NameFor(model => model.date)"
                   value="@Html.ValueFor(model => model.date)"
           		   tabindex="1"  required
				   class="easyui-datebox" 
                   style="width:100%"
				   type="text" 
				   data-options="prompt:'@Html.DisplayNameFor(model => model.date)',
								 required:true,
								 formatter:dateformatter" />
     </div>
				   

   <!--确诊人数-->
       <label class="col-md-2 mb-1 form-label text-right text-danger">@Html.DisplayNameFor(model => model.confirmed)</label>
	   <div class="col-md-4 mb-1">  
			<input id="@Html.IdFor(model => model.confirmed)"
				   name="@Html.NameFor(model => model.confirmed)" 
				   value="@Html.ValueFor(model => model.confirmed)"
				   tabindex="2" 
				   class="easyui-numberspinner" 
                   style="width:100%"
				   type="text" 
				   data-options="prompt:'@Html.DisplayNameFor(model => model.confirmed)',
								 required:true,formatter:intformatter,
                                 
                                 " />
      </div>
				   
   <!--死亡人数-->
       <label class="col-md-2 mb-1 form-label text-right text-danger">@Html.DisplayNameFor(model => model.deaths)</label>
	   <div class="col-md-4 mb-1">  
			<input id="@Html.IdFor(model => model.deaths)"
				   name="@Html.NameFor(model => model.deaths)" 
				   value="@Html.ValueFor(model => model.deaths)"
				   tabindex="3" 
				   class="easyui-numberspinner" 
                   style="width:100%"
				   type="text" 
				   data-options="prompt:'@Html.DisplayNameFor(model => model.deaths)',
								 required:true,formatter:intformatter,
                                 
                                 " />
      </div>
				   

   <!--治愈人数-->
       <label class="col-md-2 mb-1 form-label text-right text-danger">@Html.DisplayNameFor(model => model.recovered)</label>
	   <div class="col-md-4 mb-1">  
			<input id="@Html.IdFor(model => model.recovered)"
				   name="@Html.NameFor(model => model.recovered)" 
				   value="@Html.ValueFor(model => model.recovered)"
				   tabindex="4" 
				   class="easyui-numberspinner" 
                   style="width:100%"
				   type="text" 
				   data-options="prompt:'@Html.DisplayNameFor(model => model.recovered)',
								 required:true,formatter:intformatter,
                                 
                                 " />
      </div>
				   
	    </div> 
      </fieldset>
   </form>
    </div>
    </div>
</div>
<div id="windowfooter" style="padding:5px;">&nbsp;</div>
<!-- 弹出窗体form表单 -->
<!-- 弹出编辑对话框 -->

<!--begin popup detailview javascript block -->
<script type="text/javascript">
    //判断新增编辑状态
    var MODELSTATE = 'Added';
    var covid19id = null;
    function opencovid19detailwindow(data,state) {
         MODELSTATE = state;
         initcovid19detailview();
         covid19id = (data.Id || 0);
         $('#covid19detailwindow').window('open');
         $('#covid19_form').form('reset');
         $('#covid19_form').form('load', data);
             }
  //删除当前记录
  function deletecovid19item() {
    $.messager.confirm('确认', '你确定要删除该记录?', result => {
      if (result) {
        const url = `/Covid19s/Delete/${covid19id}`;
        $.get(url).done(res => {
          if (res.success) {
            toastr.success("删除成功");
            $dg.datagrid('reload');
            $('#covid19detailwindow').window('close');
          } else {
            $.messager.alert('错误', res.err, 'error');
          }
        });
      }
    });
  }
    //async 保存数据
    async function savecovid19item() { 
      const $covid19form = $('#covid19_form');
      if ($covid19form.form('enableValidation').form('validate')) {
            let covid19 = $covid19form.serializeJSON();
            let url = '/Covid19s/Edit';
            //判断是新增或是修改方法
            if (MODELSTATE === 'Added') {
                url = '/Covid19s/Create';
            }
            var token = $('input[name="__RequestVerificationToken"]', $covid19form).val();
            $.messager.progress({ title: '请等待', msg: '正在保存数据...', interval:200});
            $.ajax({
                    type: "POST",
                    url: url,
                    data: {
                        __RequestVerificationToken: token,
                        covid19:covid19
                    },
                    dataType: 'json',
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8'
                })
                .done(response => {
                    $.messager.progress('close');
                    if (response.success) {
                        hook = false;
                        $covid19form.form('disableValidation');
                        $dg.datagrid('reload');
                        $('#covid19detailwindow').window("close");
                        toastr.success("保存成功");  
                    } else {
                        $.messager.alert("错误",   response.err, "error");
                    }
                    })
                .fail((jqXHR, textStatus, errorThrown) => {
                       $.messager.progress('close');
                       $.messager.alert('异常', `${jqXHR.status}: ${jqXHR.statusText} `, 'error');
                    });
        }
    }
    //关闭窗口
    function closecovid19detailwindow() {
        $('#covid19detailwindow').window('close');
    }
    //todo
    function todo() {
         console.log('todo.....');
    }
     //判断是否有没有保存的记录
     function covid19hasmodified() {
            return hook;

     }


function initcovid19detailview() {
  //判断是否显示功能按钮
  if (MODELSTATE === 'Added') {
    $('#deleteitem-btn-group').hide();
  } else {
    $('#deleteitem-btn-group').show();
  }

//回车光标移动到下个输入控件
    //如果是枚举类型需要把numberbox改成combobox
    //确诊人数
	$('#confirmed').numberbox('textbox').bind('keydown', function (e) {
      if (e.keyCode == 13) {
        $(e.target).emulateTab();
      }
    });
    //如果是枚举类型需要把numberbox改成combobox
    //死亡人数
	$('#deaths').numberbox('textbox').bind('keydown', function (e) {
      if (e.keyCode == 13) {
        $(e.target).emulateTab();
      }
    });
    //如果是枚举类型需要把numberbox改成combobox
    //治愈人数
	$('#recovered').numberbox('textbox').bind('keydown', function (e) {
      if (e.keyCode == 13) {
        $(e.target).emulateTab();
      }
    });
    //日期类型 日期
	$('#date').datebox('textbox').bind('keydown', function (e) {
      if (e.keyCode == 13) {
        $(e.target).emulateTab();
      }
    });
}
</script>

