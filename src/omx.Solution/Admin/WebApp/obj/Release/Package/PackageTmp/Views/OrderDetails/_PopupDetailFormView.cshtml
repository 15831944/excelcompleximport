<!--begin popup detailview javascript block -->
<script type="text/javascript">
    //判断新增编辑状态
    var MODELSTATE = 'Added';
    var orderdetailid = null;
    function openorderdetaildetailwindow(data,state) {
         MODELSTATE = state;
         initorderdetaildetailview();
         orderdetailid = (data.Id || 0);
         $('#orderdetaildetailwindow').window('open');
         $('#orderdetail_form').form('reset');
         $('#orderdetail_form').form('load', data);
             }
  //删除当前记录
  function deleteorderdetailitem() {
    $.messager.confirm('确认', '你确定要删除该记录?', result => {
      if (result) {
        const url = `/OrderDetails/Delete/${orderdetailid}`;
        $.get(url).done(res => {
          if (res.success) {
            toastr.success("删除成功");
            $dg.datagrid('reload');
            $('#orderdetaildetailwindow').window('close');
          } else {
            $.messager.alert('错误', res.err, 'error');
          }
        });
      }
    });
  }
    //async 保存数据
    async function saveorderdetailitem() { 
      const $orderdetailform = $('#orderdetail_form');
      if ($orderdetailform.form('enableValidation').form('validate')) {
            let orderdetail = $orderdetailform.serializeJSON();
            let url = '/OrderDetails/Edit';
            //判断是新增或是修改方法
            if (MODELSTATE === 'Added') {
                url = '/OrderDetails/Create';
            }
            var token = $('input[name="__RequestVerificationToken"]', $orderdetailform).val();
            $.messager.progress({ title: '请等待', msg: '正在保存数据...', interval:200});
            $.ajax({
                    type: "POST",
                    url: url,
                    data: {
                        __RequestVerificationToken: token,
                        orderdetail:orderdetail
                    },
                    dataType: 'json',
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8'
                })
                .done(response => {
                    $.messager.progress('close');
                    if (response.success) {
                        hook = false;
                        $orderdetailform.form('disableValidation');
                        $dg.datagrid('reload');
                        $('#orderdetaildetailwindow').window("close");
                        toastr.success("保存成功");  
                    } else {
                        $.messager.alert("错误",   response.err, "error");
                    }
                    })
                .fail((jqXHR, textStatus, errorThrown) => {
                       $.messager.progress('close');
                       $.messager.alert('异常', `${jqXHR.status}: ${jqXHR.statusText} `, 'error');
                    });
        }
    }
    //关闭窗口
    function closeorderdetaildetailwindow() {
        $('#orderdetaildetailwindow').window('close');
    }
    //todo
    function todo() {
         console.log('todo.....');
    }
     //判断是否有没有保存的记录
     function orderdetailhasmodified() {
            return hook;

     }


