﻿@model WebApp.Models.Product
  <div class="form-row">
   @Html.HiddenFor(x=>x.Id)
         <!--名称-->
        <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.Name)</label>
			@Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Name) } })
      
         </div>

        <!--单位-->
        <div class="col-xs-12 col-md-6">
            <label class="form-label ">@Html.DisplayNameFor(model => model.Unit)</label>
			@Html.EditorFor(x => x.Unit, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Unit) } })
      
         </div>

		<!--单价-->
        <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.UnitPrice)</label>
            @Html.EditorFor(x => x.UnitPrice, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.UnitPrice) } })

        </div>

		<!--库存-->
        <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.StockQty)</label>
            @Html.EditorFor(x => x.StockQty, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.StockQty) } })

        </div>

		
      <!--是否需要QC-->
      <div class="col-xs-12 col-md-6">
              <label class="form-label text-danger">@Html.DisplayNameFor(model => model.IsRequiredQc)</label>
              <div class="custom-control custom-checkbox">
                 <input id="@Html.IdFor(model => model.IsRequiredQc)"
                       name="@Html.NameFor(model => model.IsRequiredQc)"
                       value="true" @(Model.IsRequiredQc ? "checked=\"checked\"" : "")
                       class="custom-control-input"
                       tabindex="6"
                       type="checkbox" />
                <label class="custom-control-label" for="@Html.IdFor(model => model.IsRequiredQc)">@Html.DisplayNameFor(model => model.IsRequiredQc)</label>
            </div>
      </div>

       <!--确认日期-->
       <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.ConfirmDateTime)</label>
            <div class="input-group">
			  @Html.EditorFor(x => x.ConfirmDateTime, 
                         new { htmlAttributes = new { @class = "form-control datepicker hasDatepicker",
                               placeholder = Html.DisplayNameFor(x => x.ConfirmDateTime ) } })
               <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
			 </div>
         </div>

     
       <!--产品类别-->
       <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.CategoryId)</label>
   	        @Html.DropDownListFor(model => model.CategoryId, ViewBag.CategoryId as List<SelectListItem>, htmlAttributes: new { @class = "form-control" }) 
       </div>

	    
</div>

