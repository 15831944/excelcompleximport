﻿@model WebApp.Models.Order
<!-- 弹出编辑窗体表单 -->
 <div id="orderdetailwindow" class="easyui-window" 
      title="明细数据" 
      data-options="modal:true,
                    closed:true,
                    minimizable:false,
                    collapsible:false,
                    maximized:false,
                    iconCls:'icon-more',
                    footer:'#windowfooter',
                    closeDuration:200,
                    closeAnimation:'slide',
                    openDuration:300,
                    openAnimation:'slide',
                    onBeforeClose:function(){
                      var that = $(this);
                      if(orderhasmodified()){
                        $.messager.confirm('确认','你确定要放弃保存修改的记录?',function(r){
                        if (r){
                          var opts = that.panel('options');
                          var onBeforeClose = opts.onBeforeClose;
                          opts.onBeforeClose = function(){};
                          that.panel('close');
                          opts.onBeforeClose = onBeforeClose;
                          hook = false;
                        }
                        });
                        return false;
                      }
                    },
                    onOpen:function(){
                       $(this).window('vcenter');
                       $(this).window('hcenter');
                    },
                    onRestore:function(){
                      $orderdetailsdg.datagrid('resize');
                    },
                    onMaximize:function(){
                      $orderdetaildg.datagrid('resize');
                    }
                    " style="width:800px;height:450px;display:none">
  <!-- toolbar -->
  <div class="panel-content py-2 rounded-bottom border-faded border-left-0 border-right-0  text-muted bg-subtlelight-fade sticky-top">
    <div class="row align-items-center m-0">
      <div class="col">
        <div class="btn-group btn-group-sm">
          <button name="saveitembutton" onclick="saveorderitem()" class="btn btn-default">
            <i class="fal fa-save"></i> @Html.L("Save")
          </button>
        </div>
        <div class="btn-group btn-group-sm" id="deleteitem-btn-group">
          <button onclick="deleteorderitem()" class="btn btn-danger">
            <i class="fal fa-times"></i> @Html.L("Delete")
          </button>
        </div>
      
      </div>
      <div class="col d-flex">

      </div>
    </div>
  </div>
 <!-- panel container form  -->
  <div class="panel-container show">
    <div class="panel-content">
           <form id="order_form" 
              class="easyui-form form-horizontal padding-10" 
              method="post" 
              data-options="novalidate:true,
                            onChange: function(target){
                              hook = true;
                              $('button[name*=\'saveitembutton\']').prop('disabled', false);
                             },
                             onLoadSuccess:function(data){
                               hook = false;
                               $('button[name*=\'saveitembutton\']').prop('disabled', true);
                             }">
  @Html.AntiForgeryToken()
   <!--Primary Key-->
  @Html.HiddenFor(model=>model.Id)
   <fieldset class="form-group">
   <div class="row m-1">

   <!--订单号-->
        <label class="col-md-2 mb-1 form-label text-right text-danger">@Html.DisplayNameFor(model => model.OrderNo)</label>
		<div class="col-md-4 mb-1">  
			<input id="@Html.IdFor(model => model.OrderNo)" 
				   name="@Html.NameFor(model => model.OrderNo)" 
				   value="@Html.ValueFor(model => model.OrderNo)"
				   tabindex="0" required
				   class="easyui-textbox" 
                   style="width:100%"
				   type="text" 
				   data-options="prompt:'@Html.DisplayNameFor(model => model.OrderNo)',
								 required:true, 
                                 validType: 'length[12,12]'
                                 " />
       </div>
				   
   <!--订单所属的客户-->
        <label class="col-md-2 mb-1 form-label text-right text-danger">@Html.DisplayNameFor(model => model.Customer)</label>
		<div class="col-md-4 mb-1">  
			<input id="@Html.IdFor(model => model.Customer)" 
				   name="@Html.NameFor(model => model.Customer)" 
				   value="@Html.ValueFor(model => model.Customer)"
				   tabindex="1" required
				   class="easyui-textbox" 
                   style="width:100%"
				   type="text" 
				   data-options="prompt:'@Html.DisplayNameFor(model => model.Customer)',
								 required:true, 
                                 validType: 'length[0,30]'
                                 " />
       </div>
				   

   <!--发货地址-->
        <label class="col-md-2 mb-1 form-label text-right text-danger">@Html.DisplayNameFor(model => model.ShippingAddress)</label>
		<div class="col-md-4 mb-1">  
			<input id="@Html.IdFor(model => model.ShippingAddress)" 
				   name="@Html.NameFor(model => model.ShippingAddress)" 
				   value="@Html.ValueFor(model => model.ShippingAddress)"
				   tabindex="2" required
				   class="easyui-textbox" 
                   style="width:100%"
				   type="text" 
				   data-options="prompt:'@Html.DisplayNameFor(model => model.ShippingAddress)',
								 required:true, 
                                 validType: 'length[0,200]'
                                 " />
       </div>
				   
   <!--联系人-->
        <label class="col-md-2 mb-1 form-label text-right ">@Html.DisplayNameFor(model => model.Contect)</label>
		<div class="col-md-4 mb-1">  
			<input id="@Html.IdFor(model => model.Contect)" 
				   name="@Html.NameFor(model => model.Contect)" 
				   value="@Html.ValueFor(model => model.Contect)"
				   tabindex="3" 
				   class="easyui-textbox" 
                   style="width:100%"
				   type="text" 
				   data-options="prompt:'@Html.DisplayNameFor(model => model.Contect)',
								 required:false, 
                                 validType: 'length[0,30]'
                                 " />
       </div>
				   

   <!--备注-->
        <label class="col-md-2 mb-1 form-label text-right ">@Html.DisplayNameFor(model => model.Remark)</label>
		<div class="col-md-4 mb-1">  
			<input id="@Html.IdFor(model => model.Remark)" 
				   name="@Html.NameFor(model => model.Remark)" 
				   value="@Html.ValueFor(model => model.Remark)"
				   tabindex="4" 
				   class="easyui-textbox" 
                   style="width:100%"
				   type="text" 
				   data-options="prompt:'@Html.DisplayNameFor(model => model.Remark)',
								 required:false, 
                                 validType: 'length[0,100]'
                                 " />
       </div>
				   
   <!--订单日期默认当天-->
        <label class="col-md-2 mb-1 form-label text-right text-danger">@Html.DisplayNameFor(model => model.OrderDate)</label>
		<div class="col-md-4 mb-1">  
                <input id="@Html.IdFor(model => model.OrderDate)" 
			       name="@Html.NameFor(model => model.OrderDate)"
                   value="@Html.ValueFor(model => model.OrderDate)"
           		   tabindex="5"  required
				   class="easyui-datebox" 
                   style="width:100%"
				   type="text" 
				   data-options="prompt:'@Html.DisplayNameFor(model => model.OrderDate)',
								 required:true,
								 formatter:dateformatter" />
     </div>
				   
	    </div> 
      </fieldset>
   </form>

   <div id="cp-orderdetail" class="card border mb-2" style="max-width:1200px;margin:0 auto">
        <div class="card-header p-0">
          <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">OrderDetail</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                  <a class="nav-link" href="javascript:orderdetail_append()">新增 <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item ">
                  <a class="nav-link" href="javascript:orderdetail_removeit()">删除 <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item ">
                  <a class="nav-link" href="javascript:orderdetail_accept()">保存 <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item ">
                  <a class="nav-link" href="javascript:orderdetail_reject()">取消 <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item ">
                  <a class="nav-link" href="javascript:orderdetail_reload()">刷新 <span class="sr-only">(current)</span></a>
                </li>
              </ul>

            </div>
          </nav>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table id="orderdetail_datagrid">
            </table>
          </div>
        </div>
      </div>
		  
    </div>
    </div>
</div>
<div id="windowfooter" style="padding:5px;">&nbsp;</div>
