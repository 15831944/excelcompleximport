<!-- 弹出编辑对话框 -->
<!-- orderdetail datagrid  javascript block -->
@Html.Partial("_OrderDetailEditForm", new WebApp.Models.OrderDetail())

<!--begin popup detailview javascript block -->
<script type="text/javascript">
    //判断新增编辑状态
    var MODELSTATE = 'Added';
    var orderid = null;
    function openorderdetailwindow(data,state) {
         MODELSTATE = state;
         initorderdetailview();
         orderid = (data.Id || 0);
         $('#orderdetailwindow').window('open');
         $('#order_form').form('reset');
         $('#order_form').form('load', data);
                   var url='/OrderDetails/GetDataByOrderId?orderid=' +  orderid;
          $orderdetaildg.datagrid('load',url);
          $orderdetaildg.datagrid('resize');
             }
  //删除当前记录
  function deleteorderitem() {
    $.messager.confirm('确认', '你确定要删除该记录?', result => {
      if (result) {
        const url = `/Orders/Delete/${orderid}`;
        $.get(url).done(res => {
          if (res.success) {
            toastr.success("删除成功");
            $dg.datagrid('reload');
            $('#orderdetailwindow').window('close');
          } else {
            $.messager.alert('错误', res.err, 'error');
          }
        });
      }
    });
  }
    //async 保存数据
    async function saveorderitem() { 
      const $orderform = $('#order_form');
      if ($orderform.form('enableValidation').form('validate')) {
            let order = $orderform.serializeJSON();
				  //获取明细表数据
 
                      const orderdetail_result = await orderdetail_accept();
                      if (!orderdetail_result.success) {
                         return false;
                      } else {
                         order.OrderDetails = orderdetail_result.changed;
                      }
                      
            let url = '/Orders/Edit';
            //判断是新增或是修改方法
            if (MODELSTATE === 'Added') {
                url = '/Orders/Create';
            }
            var token = $('input[name="__RequestVerificationToken"]', $orderform).val();
            $.messager.progress({ title: '请等待', msg: '正在保存数据...', interval:200});
            $.ajax({
                    type: "POST",
                    url: url,
                    data: {
                        __RequestVerificationToken: token,
                        order:order
                    },
                    dataType: 'json',
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8'
                })
                .done(response => {
                    $.messager.progress('close');
                    if (response.success) {
                        hook = false;
                        $orderform.form('disableValidation');
                        $dg.datagrid('reload');
                        $('#orderdetailwindow').window("close");
                        toastr.success("保存成功");  
                    } else {
                        $.messager.alert("错误",   response.err, "error");
                    }
                    })
                .fail((jqXHR, textStatus, errorThrown) => {
                       $.messager.progress('close');
                       $.messager.alert('异常', `${jqXHR.status}: ${jqXHR.statusText} `, 'error');
                    });
        }
    }
    //关闭窗口
    function closeorderdetailwindow() {
        $('#orderdetailwindow').window('close');
    }
    //todo
    function todo() {
         console.log('todo.....');
    }
     //判断是否有没有保存的记录
     function orderhasmodified() {
      if(!hook) {
            if (!orderdetail_endEditing()) {
                 return true;
             }
            const orderdetails = $orderdetaildg.datagrid("getChanges");
            if (MODELSTATE == 'Modified' && orderdetails.length > 0) {
                return true;
            }
            return false;
         } else {
            return hook;
         }

     }


function initorderdetailview() {
  //判断是否显示功能按钮
  if (MODELSTATE === 'Added') {
    $('#deleteitem-btn-group').hide();
  } else {
    $('#deleteitem-btn-group').show();
  }

//回车光标移动到下个输入控件
    //日期类型 订单日期默认当天
	$('#OrderDate').datebox('textbox').bind('keydown', function (e) {
      if (e.keyCode == 13) {
        $(e.target).emulateTab();
      }
    });
}
</script>

