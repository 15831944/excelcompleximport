﻿@model WebApp.Models.Covid19
  <div class="form-row">
   @Html.HiddenFor(x=>x.Id)
         <!--国家-->
        <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.country)</label>
			@Html.EditorFor(x => x.country, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.country) } })
      
         </div>

       <!--日期-->
       <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.date)</label>
            <div class="input-group">
			  @Html.EditorFor(x => x.date, 
                         new { htmlAttributes = new { @class = "form-control datepicker hasDatepicker",
                               placeholder = Html.DisplayNameFor(x => x.date ) } })
               <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
			 </div>
         </div>

		<!--确诊人数-->
        <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.confirmed)</label>
            @Html.EditorFor(x => x.confirmed, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.confirmed) } })

        </div>

		<!--死亡人数-->
        <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.deaths)</label>
            @Html.EditorFor(x => x.deaths, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.deaths) } })

        </div>

		<!--治愈人数-->
        <div class="col-xs-12 col-md-6">
            <label class="form-label text-danger">@Html.DisplayNameFor(model => model.recovered)</label>
            @Html.EditorFor(x => x.recovered, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.recovered) } })

        </div>

	    
</div>

